QWidget {
    font-family: 'Segoe UI';
    font-size: 14px;
    background-color: #f4f4f4;
}

QLineEdit {
    border: 1px solid #ccc;
    border-radius: 6px;
    padding: 6px;
    background-color: white;
}

QPushButton {
    background-color: #007acc;
    color: white;
    padding: 8px 16px;
    border-radius: 6px;
}

QPushButton:hover {
    background-color: #005f99;
}

QLabel#title {
    font-size: 20px;
    font-weight: bold;
}

QLabel#subtitle {
    font-size: 14px;
    color: #666;
}